package hw2;

public class TwentyFive {

	public static void main(String[] args) {
		/* 25.다음과 같은 출력이 나오도록 프로그램을 작성하시오.
		(1) *********** (2)54321012345
		 *********      432101234
		 *******        3210123
		 *****          21012
		 ***            101
		 *              0
		 ***            101 
		 *****          21012 
		 *******        3210123 
		 *********      432101234 
		 ***********    54321012345
		 */
		for(int i=0; i<5; i++){
			int x=4;
			for(int j=0; j<i; j++){ // 별 앞에 공백을 찍는 for문
				System.out.print(" ");
			}
			for(int k=0; k<=x-i; k++){ 
				if(k == 0){ 
					System.out.print("*");
				}
				else{ 
					System.out.print("**");
				}
			}
			System.out.println("");
		}
	}
}
